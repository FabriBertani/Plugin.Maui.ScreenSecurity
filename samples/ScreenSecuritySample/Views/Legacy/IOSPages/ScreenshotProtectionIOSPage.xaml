<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScreenSecuritySample.Views.ScreenshotProtectionIOSPage"
    Title="ScreenshotProtectionPage">
    <VerticalStackLayout
        VerticalOptions="Center">
        <Button
            Margin="16"
            BackgroundColor="ForestGreen"
            HorizontalOptions="FillAndExpand"
            Text="ENABLE SCREENSHOT PROTECTION"
            TextColor="White"
            Clicked="EnableScreenshotProtection_Clicked" />
        <Button
            Margin="16"
            BackgroundColor="DarkRed"
            HorizontalOptions="FillAndExpand"
            Text="DISABLE SCREENSHOT PROTECTION"
            TextColor="White"
            Clicked="DisableScreenshotProtection_Clicked" />
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScreenSecuritySample.Views.RecordingProtectionPage"
    Title="RecordingProtectionPage">
    <VerticalStackLayout
        VerticalOptions="Center">
        <Button
            Margin="16"
            BackgroundColor="ForestGreen"
            HorizontalOptions="FillAndExpand"
            Text="ACTIVATE RECORDING PROTECTION"
            TextColor="White"
            Clicked="ActivateRecordingProtection_Clicked" />
        <Button
            Margin="16"
            BackgroundColor="DarkRed"
            HorizontalOptions="FillAndExpand"
            Text="DEACTIVATE RECORDING PROTECTION"
            TextColor="White"
            Clicked="DeactivateRecordingProtection_Clicked" />
    </VerticalStackLayout>
</ContentPage>
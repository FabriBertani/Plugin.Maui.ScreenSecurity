<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScreenSecuritySample.Views.ScreenshotProtectionPage"
    Title="ScreenshotProtectionPage">
    <VerticalStackLayout
        VerticalOptions="Center">
        <Button
            Margin="16"
            BackgroundColor="ForestGreen"
            HorizontalOptions="FillAndExpand"
            Text="ACTIVATE SCREENSHOT PROTECTION"
            TextColor="White"
            Clicked="ActivateScreenshotProtection_Clicked" />
        <Button
            Margin="16"
            BackgroundColor="DarkRed"
            HorizontalOptions="FillAndExpand"
            Text="DEACTIVATE SCREENSHOT PROTECTION"
            TextColor="White"
            Clicked="DeactivateScreenshotProtection_Clicked" />
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScreenSecuritySample.Views.MainPage"
    x:Name="this">
    <ScrollView
        Padding="16, 0"
        HorizontalScrollBarVisibility="Never">
        <VerticalStackLayout
            VerticalOptions="Center"
            Spacing="25">
            <Label 
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                FontSize="Large"
                Text="This page is protected against content exposure." />
            <Button
                CornerRadius="15"
                FontSize="Large"
                Text="Navigate to unprotected page"
                Clicked="Button_Clicked" />
            <Button
                x:Name="activationBtn"
                CornerRadius="15"
                FontSize="Large"
                Clicked="ActivationBtn_Clicked" />
            <Label
                x:Name="isEnabledLabel"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="Center"
                FontSize="Medium"
                Text="Screen protection enabled:"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
